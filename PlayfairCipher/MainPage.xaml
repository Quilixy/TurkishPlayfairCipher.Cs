<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayfairCipher.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Playfair Şifreleme" FontSize="24" HorizontalOptions="Center" />
        
        <Entry x:Name="InputText" Placeholder="Metni giriniz" />
        <Entry x:Name="KeyText" Placeholder="Anahtarı giriniz" />
        
        <Button Text="Şifrele" Clicked="Encrypt_Clicked" />
        <Button Text="Çöz" Clicked="Decrypt_Clicked" />
        
        <Label x:Name="ResultLabel" FontSize="18" TextColor="Blue" />
    </VerticalStackLayout>
</ContentPage>